<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="item.admin.item.class">TooBig\AppBundle\Admin\ItemAdmin</parameter>
        <parameter key="item.admin.item.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="item.admin.item.entity">TooBig\AppBundle\Entity\Item</parameter>
        <parameter key="item.admin.item.translation_domain">messages</parameter>
        <parameter key="item.admin.item.group">Website</parameter>
        <parameter key="item.admin.item.title">Items</parameter>

        <parameter key="item.admin.itemfile.class">TooBig\AppBundle\Admin\ItemFileAdmin</parameter>
        <parameter key="item.admin.itemfile.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="item.admin.itemfile.entity">TooBig\AppBundle\Entity\ItemFile</parameter>

        <parameter key="item.admin.itemimage.class">TooBig\AppBundle\Admin\ItemImageAdmin</parameter>
        <parameter key="item.admin.itemimage.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="item.admin.itemimage.entity">TooBig\AppBundle\Entity\ItemImage</parameter>


        <parameter key="item.admin.itemlink.class">TooBig\AppBundle\Admin\ItemLinkAdmin</parameter>
        <parameter key="item.admin.itemlink.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="item.admin.itemlink.entity">TooBig\AppBundle\Entity\ItemLink</parameter>


        <parameter key="item.admin.filemedia.class">TooBig\AppBundle\Admin\ItemFileMediaAdmin</parameter>
        <parameter key="item.admin.filemedia.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="item.admin.filemedia.entity">TooBig\AppBundle\Entity\ItemFileMedia</parameter>


        <parameter key="item.admin.imagemedia.class">TooBig\AppBundle\Admin\ItemImageMediaAdmin</parameter>
        <parameter key="item.admin.imagemedia.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="item.admin.imagemedia.entity">TooBig\AppBundle\Entity\ItemImageMedia</parameter>


    </parameters>

    <services>

        <service id="item.admin.item" class="%item.admin.item.class%">
            <tag name="sonata.admin" manager_type="orm" group="%item.admin.item.group%"
                 label="%item.admin.item.title%"/>
            <argument/>
            <argument>%item.admin.item.entity%</argument>
            <argument>%item.admin.item.controller%</argument>

            <call method="setUserManager">
                <argument type="service" id="fos_user.user_manager"/>
            </call>

            <!--
            <call method="setPoolFormatter">
                <argument type="service" id="sonata.formatter.pool"/>
            </call>
-->

        </service>


        <service id="item.admin.itemfile" class="%item.admin.itemfile.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%item.admin.itemfile.entity%</argument>
            <argument>%item.admin.itemfile.controller%</argument>

        </service>

        <service id="item.admin.itemimage" class="%item.admin.itemimage.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%item.admin.itemimage.entity%</argument>
            <argument>%item.admin.itemimage.controller%</argument>

        </service>


        <service id="item.admin.itemlink" class="%item.admin.itemlink.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%item.admin.itemlink.entity%</argument>
            <argument>%item.admin.itemlink.controller%</argument>

        </service>


        <service id="item.admin.item_file_media" class="%item.admin.filemedia.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%item.admin.filemedia.entity%</argument>
            <argument>%item.admin.filemedia.controller%</argument>
        </service>

        <service id="item.admin.item_image_media" class="%item.admin.imagemedia.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%item.admin.imagemedia.entity%</argument>
            <argument>%item.admin.imagemedia.controller%</argument>
        </service>

        <service id="item.admin.brand" class="TooBig\AppBundle\Admin\BrandAdmin">
            <tag name="sonata.admin" manager_type="orm" group="References"
                 label="Brand"/>
            <argument/>
            <argument>TooBig\AppBundle\Entity\Brand</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>

        <service id="item.admin.model" class="TooBig\AppBundle\Admin\ModelAdmin">
            <tag name="sonata.admin" manager_type="orm" group="References"
                 label="Model"/>
            <argument/>
            <argument>TooBig\AppBundle\Entity\Model</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>

        <service id="item.admin.color" class="TooBig\AppBundle\Admin\ColorAdmin">
            <tag name="sonata.admin" manager_type="orm" group="References"
                 label="Color"/>
            <argument/>
            <argument>TooBig\AppBundle\Entity\Color</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>

        <service id="item.admin.size_type" class="TooBig\AppBundle\Admin\SizeTypeAdmin">
            <tag name="sonata.admin" manager_type="orm" group="References"
                 label="SizeType"/>
            <argument/>
            <argument>TooBig\AppBundle\Entity\SizeType</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>

        <service id="item.admin.size" class="TooBig\AppBundle\Admin\SizeAdmin">
            <tag name="sonata.admin" manager_type="orm" group="References"
                 label="Size"/>
            <argument/>
            <argument>TooBig\AppBundle\Entity\Size</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>


    </services>

</container>