{% block choice_widget_expanded %}
    {% spaceless %}
        <div {{ block('widget_container_attributes') }}>
            {% set current_type = '' %}

                {% for key, choice in form.vars.choices %}
                    {% if attribute(choice.data, 'sizeType') is defined %}
                        {% if current_type != choice.data.sizeType.name %}
                            {{ choice.data.sizeType.name }} - российский размер
                            {% set current_type = choice.data.sizeType.name %}
                        {% endif %}
                    {% endif %}
                    <div class="">
                        {{ form_widget(form[key], {'attr': {'class': attr.widget_class|default('')}}) }}
                        {% if form.vars.name != 'color' %}
                            {{ choice.label|trans({}, translation_domain) }}
                        {% else %}
                            <div style="background-color: {{ choice.label }}" class="filter-color-box"></div>
                        {% endif %}
                    </div>
                {% endfor %}

        </div>
    {% endspaceless %}
{% endblock choice_widget_expanded %}