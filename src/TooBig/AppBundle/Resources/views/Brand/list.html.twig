{% extends 'TooBigAppBundle::page-with-header.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/bundles/toobigapp/css/jquery-ui.css" rel="stylesheet">
    <link href="/bundles/toobigapp/css/jquery-ui.structure.css" rel="stylesheet">
    <link href="/bundles/toobigapp/css/jquery-ui.theme.css" rel="stylesheet">
{% endblock stylesheets %}

{% block breadcrumbs %}
    <div class="breadcrumbs">
        <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb" class="breadcrumbs-item"><a href="{{ rpath ('/') }}" class="breadcrumbs-item-link link" itemprop="url"><span itemprop="title">Главная</span></a></span>
        <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb" class="breadcrumbs-item"><a itemprop="url" class="breadcrumbs-item-link link"><span itemprop="title">Бренды</span></a></span>
    </div>
{% endblock breadcrumbs %}

{% block page_header %}
{% endblock page_header %}

{% block page_body %}

{% if entities is defined and entities %}
{% block entity_list%}

{% for entity in entities %}

    {% block entity_list_entry %}
        <div class="c-item c-brand">

            {% block entity_list_entry_image  %}
               {# <div class="item-img img-brand"><a href="{{ rpath('/') }}?ItemsFilter[brand][]={{ entity.id }}" target="_blank"> #}
                    {# if entity.image | length %}
                    <img src="{{ entity.image['path'] }}" class="img-polaroid" width="{{ entity.image['width'] }}" height="{{ entity.image['height'] }}">
                    {% endif #}
                {#</a></div>#}
            {% endblock entity_list_entry_image  %}

            {% block entity_list_entry_title  %}
                <div class="item-title"><a href="{{ rpath('/') }}?ItemsFilter[brand][]={{ entity.id }}">{{ entity }}</a></div>
            {% endblock entity_list_entry_title  %}

        </div>
    {% endblock entity_list_entry%}

{% endfor %}
{% endblock entity_list%}


{% block pagination %}
{% include 'IphpCoreBundle::pagination.html.twig' with {'entities': entities} %}
{% endblock pagination %}

{% endif%}

{% endblock page_body %}

