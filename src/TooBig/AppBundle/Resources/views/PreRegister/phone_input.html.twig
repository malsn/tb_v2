{# extends 'TooBigAppBundle::page-with-header.html.twig' #}

{% block title %}
{% endblock %}

{% block page_body %}
    <div class="row">
    <div class="col-sm-12">
        <div class="panel-body">

        <div class="panel-heading">
            <h2 class="panel-title">Для регистрации необходимо подтвердить номер телефона через код SMS</h2>
        </div>

        <div class="pre-register form-phone-input">
            {{ form_start(form, {'action': path('app_pre_register_phone')}) }}
            <div class="form-group control-group">
                <label id="PreRegister-phone-label" for="PreRegister_phone" class="col-sm-3 control-label">{{ 'Мобильный телефон'|trans({}, 'SonataUserBundle') }}</label>
                <div class="col-sm-5">
                    {{ form_widget(form.phone, {'attr': {'class':'form-control'}}) }}
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.save, {'attr': {'path-controller': path('app_pre_register_phone') }}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="form-group control-group" id="sms-check-code">

        </div>
        </div>
    </div>
    </div>
{% endblock page_body %}