                    {% block navbar_top_logo %}
                        <a class="navbar-brand" href="{{ rpath ('/') }}">{% block site_title %}TooBig{% endblock %}</a>
                    {% endblock navbar_top_logo %}

                    <ul class="quick-links-menu">
                        <li>
                            <a class="navbar-quick-link" href="{{ rpath ('/odezhda/') }}">Одежда</a>
                        </li>
                        <li>
                            <a class="navbar-quick-link" href="{{ rpath ('/obuv/') }}">Обувь</a>
                        </li>
                        <li>
                            <a class="navbar-quick-link" href="{{ rpath ('/sportivnye-tovary/') }}">Спорт</a>
                        </li>
                        <li>
                            <a class="navbar-quick-link" href="{{ path ('app_brand_list') }}">Бренды</a>
                        </li>
                    </ul>

                </div>


                <div class="navbar-header pull-right">


                    {#               <div class="navbar pull-left">
                                       <form class="navbar-form navbar-left">
                                           <div class="btn-group">
                                               <button type="button" class="btn btn-primary">
