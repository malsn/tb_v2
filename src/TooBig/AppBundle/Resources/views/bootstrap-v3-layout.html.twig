                                      <form class="navbar-form navbar-left" role="search" style="width: auto;overflow: hidden" >
                                            <div class="form-group ">

                                                <input type="search" class="form-control" placeholder="Поиск">
                                                <button type="submit" class="btn btn-default " aria-label="search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                          </div>

                    </form>  #}
                </div>


            </div>
        </nav>

    {% endblock navbar_top %}


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                {% block breadcrumbs %}{% endblock breadcrumbs %}

            </div>
        </div>
        <div class="row">
            <div class="col-md-3">

                {% block menu_left %}
                    {% set controller = 'Application\\Iphp\\ContentBundle\\Module\\ItemListModule' %}
                    {{ render(controller('ApplicationIphpCoreBundle:Menu:Menu',{ 'template': 'menu-left.html.twig', 'rubric' : iphp.rubric, 'controller' : controller })) }}
                {% endblock menu_left %}

            </div>
            <div class="col-md-7">
                {% block fos_user_content %}
                {% endblock fos_user_content %}

                {% block body %}
                {% endblock body %}
            </div>
            <div class="col-md-2">
                {% block info_block %}
                {% endblock info_block %}
            </div>
        </div>
    </div>


    {% block footer_all %}
        <div class="container-fluid">
            <hr>
            <footer>

                {% block menu_bottom %}
                    <p style="text-align: center">
                        {% set controller = 'Iphp\\ContentBundle\\Module\\ContentIndexModule' %}
                        {{ render(controller('ApplicationIphpCoreBundle:Menu:Menu',{ 'template': 'menu-bottom.html.twig', 'rubric' : iphp.rubric, 'controller' : controller })) }}
                    </p>
                {% endblock menu_bottom %}

                {% block footer %}
                    <p>&copy; TooBig 2016</p>
                {% endblock footer %}

            </footer>
        </div>
    {% endblock footer_all %}

    {% block flash_bag %}
        <div class="modal fade" id="alert_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    </div>
                </div>
            </div>
        </div>
    {% endblock flash_bag %}

{% endblock body_all %}

</body>
</html>
