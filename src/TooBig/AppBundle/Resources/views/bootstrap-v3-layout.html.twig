                    <div class="navbar-header pull-left">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                data-target="#navbar"
                                aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="navbar-header pull-right">
                        <form class="" style="padding-top: 9px">
                            {% if app.user %}

                                {% set userMainLink = '' %}

                                {% if path_exists ('sonata_admin_dashboard') %}
                                    {% set userMainLink = path ('sonata_admin_dashboard') %}
                                {% endif %}


                                <div class="btn-group">

                                    {% block use_top_showlogin %}
                                        <a class="btn btn-primary" href="{{ userMainLink }}">
                                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                            {{ app.user.username }}
                                        </a>
                                    {% endblock %}


                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                                            aria-expanded="true">
                                        <span class="caret"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-right" role="menu">

                                        {% block user_top_actions %}

                                            {% if path_exists ('sonata_admin_dashboard') and is_granted("ROLE_ADMIN") %}
                                                <li><a href="{{ path ('sonata_admin_dashboard') }}">
                                                        <span class="glyphicon glyphicon-edit"
                                                              aria-hidden="true"></span>Панель управления</a></li>
                                            {% endif %}

                                                <li><a href="{{ path ('app_user_profile_edit') }}">
                                                        <span class="glyphicon glyphicon-user"
                                                              aria-hidden="true"></span>Мой профайл</a></li>
                                                <li><a href="{{ path ('app_list_user_items') }}">
                                                        <span class="glyphicon glyphicon-tasks"
                                                              aria-hidden="true"></span>Мои объявления</a></li>
                                                <li><a href="{{ path ('app_list_watch_items') }}">
                                                        <span class="glyphicon glyphicon-tasks"
                                                              aria-hidden="true"></span>Мои подписки</a></li>

                                            {% block user_top_action_logout %}

                                                {% if path_exists ('fos_user_security_logout') %}
                                                    <li class="divider"></li>

                                                    <li><a href="{{ path ('fos_user_security_logout') }}"> <span
                                                                    class="glyphicon glyphicon-log-out"
                                                                    aria-hidden="true"></span> {{   "layout.logout" | trans ({}, 'FOSUserBundle') }}</a></li>
                                                {% endif %}

                                            {% endblock user_top_action_logout %}
                                        {% endblock user_top_actions %}
                                    </ul>
                                </div>

                            {% else %}

                                <a class="btn btn-primary"
                                   href="{{ path_exists ('fos_user_security_login') ? path ('fos_user_security_login') : '#' }}"
                                   class="btn btn-primary">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                    {{ path_exists ('fos_user_security_login') ?
                                       "layout.login"| trans ({}, 'FOSUserBundle') : 'Login'}}
                                </a>

                            {% endif %}
                        </form>
                    </div>

                </div>


                <div id="navbar" class="navbar-collapse collapse">

                    {% block menu_top %}


                        {# render(controller('IphpCoreBundle:Menu:Menu',{ 'template': 'menu-dropdown.html.twig', 'rubric' : iphp.rubric })) #}

                    {% endblock menu_top %}
                    {#

                                      <form class="navbar-form navbar-left" role="search" style="width: auto;overflow: hidden" >
                                            <div class="form-group ">

                                                <input type="search" class="form-control" placeholder="Поиск">
                                                <button type="submit" class="btn btn-default " aria-label="search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                          </div>

                    </form>  #}
                </div>


            </div>
        </nav>

    {% endblock navbar_top %}


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumbs">
                    <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb" class="breadcrumbs-item"><a href="/" class="breadcrumbs-item-link link" itemprop="url"><span itemprop="title">Главная</span></a></span>
                    {% if breadcrumbs is defined %}
                        {% for rubric in breadcrumbs %}
                            <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb" class="breadcrumbs-item"><a href="{{ entitypath(rubric) }}" itemprop="url" class="breadcrumbs-item-link link"><span itemprop="title">{{ rubric }}</span></a></span>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">

                {% block menu_left %}
                    {{ render(controller('IphpCoreBundle:Menu:Menu',{ 'template': 'menu-left.html.twig', 'rubric' : iphp.rubric })) }}
                {% endblock menu_left %}

            </div>
            <div class="col-md-9">
                {% block fos_user_content %}
                {% endblock fos_user_content %}
                {% block body %}
                {% endblock body %}
            </div>
        </div>
    </div>


    {% block footer_all %}
        <div class="container-fluid">
            <hr>
            <footer>

                {% block footer %}
                    <p>&copy; Sergey Malyshev 2015</p>
                {% endblock footer %}

            </footer>
        </div>
    {% endblock footer_all %}

{% endblock body_all %}


</body>
</html>
