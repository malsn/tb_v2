{% extends 'TooBigAppBundle::page-with-header.html.twig' %}

{% block title %}Редактирование подписки "{{ posting.title }}"{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/bundles/toobigapp/css/jquery-ui.css" rel="stylesheet">
    <link href="/bundles/toobigapp/css/jquery-ui.structure.css" rel="stylesheet">
    <link href="/bundles/toobigapp/css/jquery-ui.theme.css" rel="stylesheet">
{% endblock stylesheets %}

{% block breadcrumbs %}
    <div class="breadcrumbs">
        <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb" class="breadcrumbs-item"><a href="{{ rpath ('/') }}" class="breadcrumbs-item-link link" itemprop="url"><span itemprop="title">Главная</span></a></span>
        <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb" class="breadcrumbs-item"><a itemprop="url" class="breadcrumbs-item-link link"><span itemprop="title">Редактирование подписки</span></a></span>
    </div>
{% endblock breadcrumbs %}


{% block page_header %}
        <div class="page-header">
            <h1>Редактирование подписки "{{ posting.title }}"</h1>
        </div>
{% endblock page_header %}





{% block page_body %}

    {% form_theme form.color 'TooBigAppBundle:Form:subscription_colorpicker_fields.html.twig' %}

<form name="Subscription" id="Subscription" class="edit-form form-horizontal" action="{{ path('app_subscription_edit', { subscription_id: posting.id }) }}" method="post" {{ form_enctype(form) }} path-controller="{{ path('app_list_rubric_children') }}">

    <div class="form-group control-group">
        <div class="col-sm-12 form-buttons">
            <a class="btn btn-success btn-subscription-add" href="{{ path('app_subscription_add') }}">Добавить новую подписку</a>
            <a class="btn btn-success" href="{{ path('app_list_subscriptions') }}">Вернуться к списку подписок</a>
        </div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_title" class="col-sm-3 control-label">{{ 'Наименование'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.title, {'attr': {'class':'form-control'}}) }}</div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_rubric" class="col-sm-3 control-label">{{ 'Тип объявления'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.rubric, {'attr': {'class':'form-control'}}) }}
            <input id="rubric" type="hidden" name="rubric" value="1"/>
            <input id="struct" type="hidden" name="struct" value="1"/>
            {% if posting.rubric is defined and posting.rubric is not null %}
                {{ render(controller('TooBigAppBundle:Subscription:getBreadcrumbs', {
                    'rubric_id': posting.rubric
                })) }}
                <div class="form-group control-group">или изменить</div>
            {% endif %}
            <div id="struct-1">

            </div>
        </div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_gender" class="col-sm-3 control-label">{{ 'Пол'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.gender, {'attr': {'class':'form-control '}}) }}</div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_color" class="col-sm-3 control-label">{{ 'Цвет'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.color, {'attr': {'class':'form-control'}}) }}</div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_brand" class="col-sm-3 control-label">{{ 'Бренд'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.brand, {'attr': {'class':'brand form-control'}}) }}</div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_model" class="col-sm-3 control-label">{{ 'Модель'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.model, {'attr': {'class':'model form-control'}}) }}</div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_size_type" class="col-sm-3 control-label">{{ 'Размерный ряд'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.size_type, {'attr': {'class':'size-type form-control'}}) }}</div>
    </div>

    <div class="form-group control-group">
        <label for="Subscription_size" class="col-sm-3 control-label">{{ 'Размер'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">{{ form_widget(form.size, {'attr': {'class':'size form-control'}}) }}</div>
    </div>

    {#<div class="form-group control-group">
        <label class="col-sm-3 control-label">{{ 'Цена'|trans({}, 'SonataUserBundle') }}</label>
        <div class="col-sm-9">
            <div id="price-slider-ui"></div>
            <div class="price-slider-range">
                от {{ form_widget(form.price_min, {'attr': {'class':'filter-form-item price-min'}}) }} до
                {{ form_widget(form.price_max, {'attr': {'class':'filter-form-item price-max'}}) }} руб.
            </div>
        </div>
    </div>#}

    <div class="form-group control-group">
        <div class="col-sm-12 form-buttons">
                {{ form_widget(form.save) }}{{ form_widget(form.reset) }}
        </div>
    </div>

    {{ form_end(form) }}

{% endblock page_body %}