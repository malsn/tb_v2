<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Sonata\UserBundle\Entity\User" table="fos_user_user">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="place" type="text" column="place" nullable="true"/>
        <field name="place_geo_lat" type="text" column="place_geo_lat" nullable="true"/>
        <field name="place_geo_lon" type="text" column="place_geo_lon" nullable="true"/>

        <one-to-many field="watchItems" target-entity="TooBig\AppBundle\Entity\ItemSubscribtion" mapped-by="user">
            <cascade><cascade-persist/></cascade>
        </one-to-many>

        <one-to-many field="subscriptions" target-entity="TooBig\AppBundle\Entity\AutoSubscription" mapped-by="createdBy">
            <cascade><cascade-persist/></cascade>
        </one-to-many>

    </entity>

</doctrine-mapping>
