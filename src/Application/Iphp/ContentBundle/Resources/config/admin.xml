<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="iphp.content.admin.content.class">TooBig\AppBundle\Admin\ItemAdmin</parameter>
        <parameter key="iphp.content.admin.content.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="iphp.content.admin.content.entity">TooBig\AppBundle\Entity\Content</parameter>
        <parameter key="iphp.content.admin.content.translation_domain">messages</parameter>
        <parameter key="iphp.content.admin.content.group">Website</parameter>
        <parameter key="iphp.content.admin.content.title">Items</parameter>

        <parameter key="iphp.content.admin.contentfile.class">TooBig\AppBundle\Admin\ItemFileAdmin</parameter>
        <parameter key="iphp.content.admin.contentfile.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="iphp.content.admin.contentfile.entity">TooBig\AppBundle\Entity\ItemFile</parameter>

        <parameter key="iphp.content.admin.contentimage.class">TooBig\AppBundle\Admin\ItemImageAdmin</parameter>
        <parameter key="iphp.content.admin.contentimage.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="iphp.content.admin.contentimage.entity">TooBig\AppBundle\Entity\ItemImage</parameter>


        <parameter key="iphp.content.admin.contentlink.class">TooBig\AppBundle\Admin\ItemLinkAdmin</parameter>
        <parameter key="iphp.content.admin.contentlink.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="iphp.content.admin.contentlink.entity">TooBig\AppBundle\Entity\ItemLink</parameter>


        <parameter key="iphp.content.admin.filemedia.class">TooBig\AppBundle\Admin\ItemFileMediaAdmin</parameter>
        <parameter key="iphp.content.admin.filemedia.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="iphp.content.admin.filemedia.entity">TooBig\AppBundle\Entity\ItemFileMedia</parameter>


        <parameter key="iphp.content.admin.imagemedia.class">TooBig\AppBundle\Admin\ItemImageMediaAdmin</parameter>
        <parameter key="iphp.content.admin.imagemedia.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="iphp.content.admin.imagemedia.entity">TooBig\AppBundle\Entity\ItemImageMedia</parameter>


    </parameters>

    <services>

        <service id="iphp.item.admin.item" class="%iphp.content.admin.content.class%">
            <tag name="sonata.admin" manager_type="orm" group="%iphp.content.admin.content.group%"
                 label="%iphp.content.admin.content.title%"/>
            <argument/>
            <argument>%iphp.content.admin.content.entity%</argument>
            <argument>%iphp.content.admin.content.controller%</argument>

            <call method="setUserManager">
                <argument type="service" id="fos_user.user_manager"/>
            </call>

            <!--
            <call method="setPoolFormatter">
                <argument type="service" id="sonata.formatter.pool"/>
            </call>
-->

        </service>


        <service id="iphp.item.admin.itemfile" class="%iphp.content.admin.contentfile.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%iphp.content.admin.contentfile.entity%</argument>
            <argument>%iphp.content.admin.contentfile.controller%</argument>

        </service>

        <service id="iphp.item.admin.itemimage" class="%iphp.content.admin.contentimage.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%iphp.content.admin.contentimage.entity%</argument>
            <argument>%iphp.content.admin.contentimage.controller%</argument>

        </service>


        <service id="iphp.item.admin.itemlink" class="%iphp.content.admin.contentlink.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%iphp.content.admin.contentlink.entity%</argument>
            <argument>%iphp.content.admin.contentlink.controller%</argument>

        </service>


        <service id="iphp.item.admin.item_file_media" class="%iphp.content.admin.filemedia.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%iphp.content.admin.filemedia.entity%</argument>
            <argument>%iphp.content.admin.filemedia.controller%</argument>
        </service>

        <service id="iphp.item.admin.item_image_media" class="%iphp.content.admin.imagemedia.class%">
            <tag name="sonata.admin" manager_type="orm" show_in_dashboard="false"/>
            <argument/>
            <argument>%iphp.content.admin.imagemedia.entity%</argument>
            <argument>%iphp.content.admin.imagemedia.controller%</argument>
        </service>


    </services>

</container>